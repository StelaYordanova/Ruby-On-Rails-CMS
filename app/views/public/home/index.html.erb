<h1>Home Page</h1>

<% @categories.each do |category| %>
  <h2><%= category.name %></h2>
  <ul>
    <% @books_per_category[category.id].each do |book| %>
      <li>
        <%= link_to book.title, public_book_path(book) %>
        (Author: <%= book.author.name %>, Year: <%= book.year_of_publication %>)
      </li>
    <% end %>
  </ul>
<% end %>
