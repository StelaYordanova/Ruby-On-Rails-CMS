<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= link_to 'Show', cms_author_path(author) %></td>
        <td><%= link_to 'Edit', edit_cms_author_path(author) %></td>
        <td><%= link_to 'Destroy', cms_author_path(author), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @authors %>

<%= link_to I18n.t('cms.actions.new_author'), new_cms_author_path %>
