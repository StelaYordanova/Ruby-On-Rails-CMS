<h1>Books</h1>

<%= form_tag(cms_books_path, method: :get) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year of Publication</th>
      <th>Author</th>
      <th>Categories</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.year_of_publication %></td>
        <td><%= book.author.name %></td>
        <td>
          <% book.categories.each do |category| %>
            <%= category.name %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', cms_book_path(book) %></td>
        <td><%= link_to 'Edit', edit_cms_book_path(book) %></td>
        <td><%= link_to 'Destroy', cms_book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_cms_book_path %>


