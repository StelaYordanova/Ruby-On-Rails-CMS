<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', cms_category_path(category) %></td>
        <td><%= link_to 'Edit', edit_cms_category_path(category) %></td>
        <td><%= link_to 'Destroy', cms_category_path(category), method: :delete, data: { turbo_confirm: 'Are you sure?', turbo_method: :delete } %>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New Category', new_cms_category_path %>
